    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "league/oauth2-client": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Platformsh\\OAuth2\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Platformsh\\OAuth2\\Client\\Tests\\": "tests"
        }
